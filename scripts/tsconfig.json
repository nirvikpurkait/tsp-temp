{
  "compilerOptions": {
    "target": "ES2020", // JS version output
    "module": "commonjs", // Module system (use "ESNext" for ESM)
    "moduleResolution": "node", // Resolve modules like Node.js
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Allow default imports from CommonJS
    "skipLibCheck": true, // Skip type checks for .d.ts files
    "resolveJsonModule": true, // Allow importing JSON files
    "allowJs": false // Set to true if using JS too
  }
}
