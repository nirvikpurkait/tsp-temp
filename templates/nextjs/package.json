{
  "name": "nextjs-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typegen": "next typegen",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "format": "prettier --write **/*.{ts,tsx,css} --config ./prettier.config.js",
    "test:vt": "vitest",
    "test:vt:exec": "vitest run",
    "test:vt:coverage": "vitest --coverage.enabled",
    "test:vt:ui": "vitest --ui --open false",
    "test:vt:report": "http-server coverage -p 51730",
    "test:pw:headless": "playwright test",
    "test:pw:headed": "playwright test --headed",
    "test:pw:ui": "playwright test --ui",
    "test:pw:codegen": "playwright codegen",
    "test:pw:report": "playwright show-report",
    "sb:dev": "storybook dev -p 6006 --no-open -c ./src/config/storybook --quiet",
    "sb:build": "storybook build -c ./src/config/storybook",
    "sb:preview": "http-server storybook-static -p 6600",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,css}": "npm run format"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "mysql2": "^3.15.1",
    "next": "15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-a11y": "^9.1.4",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/nextjs": "^9.1.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-storybook": "^9.1.4",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
